@model ApollyonInc.Models.Pessoas_e_Empresas.Pessoas_e_Empresas

@{
    ViewData["Title"] = "Cadastrar Cliente";
}
<h4>Cadastrar Cliente</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*Checkbox(Cliente/PessoaFisica/Pessoa Juridica/Nome Social) - Data de Cadastro - Status*@
    <div class="form-row">
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Cliente" checked disabled" /> @Html.DisplayNameFor(model => model.Cliente)
            </label>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="PessoaFisica" /> @Html.DisplayNameFor(model => model.PessoaFisica)
            </label>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="PessoaJuridica" /> @Html.DisplayNameFor(model => model.PessoaJuridica)
            </label>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="NomeSocial" /> @Html.DisplayNameFor(model => model.NomeSocial)
            </label>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="DataDeCadastro" class="control-label"></label>
            <input asp-for="DataDeCadastro" class="form-control" />
            <span asp-validation-for="DataDeCadastro" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ApollyonInc.Models.Pessoas_e_Empresas.Enums.Status>()"><option>Selecione o Status</option></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    @*Nome/Razão Social - Apelido/Nome Fantasia*@
    <div class="form-row">
        <div class="col-md-6 form-group">
            <label asp-for="NomeRazaoSocial" class="control-label"></label>
            <input asp-for="NomeRazaoSocial" class="form-control" />
            <span asp-validation-for="NomeRazaoSocial" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="ApelidoNomeFantasia" class="control-label"></label>
            <input asp-for="ApelidoNomeFantasia" class="form-control" />
            <span asp-validation-for="ApelidoNomeFantasia" class="text-danger"></span>
        </div>
    </div>
    @*CPF/CNPJ - Indicador da IE do Destinatário - RG/Inscrição Estadual - Emissor do RG - UF Do Emissor*@
    <div class="form-row">
        <div class="col-md-2 form-group">
            <label asp-for="CPFCNPJ" class="control-label"></label>
            <input asp-for="CPFCNPJ" class="form-control" />
            <span asp-validation-for="CPFCNPJ" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="IndicadorDaIEDoDestinatario" class="control-label"></label>
            <select asp-for="IndicadorDaIEDoDestinatario" class="form-control" asp-items="Html.GetEnumSelectList<ApollyonInc.Models.Pessoas_e_Empresas.Enums.Indicador_da_IE_do_Destinatário>()"><option>Selecione o Indicador</option></select>
            <span asp-validation-for="IndicadorDaIEDoDestinatario" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="RGInscricaoEstadual" class="control-label"></label>
            <input asp-for="RGInscricaoEstadual" class="form-control" />
            <span asp-validation-for="RGInscricaoEstadual" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="EmissorDoRG" class="control-label"></label>
            <input asp-for="EmissorDoRG" class="form-control" />
            <span asp-validation-for="EmissorDoRG" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="UFDoEmissor" class="control-label"></label>
            <select asp-for="IndicadorDaIEDoDestinatario" class="form-control" asp-items="Html.GetEnumSelectList<ApollyonInc.Models.Pessoas_e_Empresas.Enums.UF>()"><option>UF</option></select>
            <span asp-validation-for="UFDoEmissor" class="text-danger"></span>
        </div>
    </div>
    @*Inscrição Municipal - Sexo - Aniversário - Telefone - Celular - Limite de Credito*@
    <div class="form-row">
        <div class="col-md-2 form-group">
            <label asp-for="InscricaoMunicipal" class="control-label"></label>
            <input asp-for="InscricaoMunicipal" class="form-control" />
            <span asp-validation-for="InscricaoMunicipal" class="text-danger"></span>
        </div>
        <div class="col-md-1 form-group">
            <label asp-for="Sexo" class="control-label"></label>
            <select asp-for="Sexo" class="form-control" asp-items="Html.GetEnumSelectList<ApollyonInc.Models.Pessoas_e_Empresas.Enums.Sexo>()"></select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Aniversario" class="control-label"></label>
            <input asp-for="Aniversario" class="form-control" />
            <span asp-validation-for="Aniversario" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" data-inputmask="(##) #####-####" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Celular" class="control-label"></label>
            <input asp-for="Celular" class="form-control" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="LimiteDeCredito" class="control-label"></label>
            <span class="input-group-text">R$</span>
            <input asp-for="LimiteDeCredito" type="text" class="form-control">
            <span class="input-group-text">,00</span>
            <span asp-validation-for="LimiteDeCredito" class="text-danger"></span>
        </div>
    </div>
    @*E-Mail - E-Mail para NFE*@
    <div class="form-row">
        <div class="col-md-6 form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="EmailParaNFE" class="control-label"></label>
            <input asp-for="EmailParaNFE" class="form-control" />
            <span asp-validation-for="EmailParaNFE" class="text-danger"></span>
        </div>
    </div>
    @*Site - Observações*@
    <div class="form-row">
        <div class="col-md-6 form-group">
            <label asp-for="Site" class="control-label"></label>
            <input asp-for="Site" class="form-control" />
            <span asp-validation-for="Site" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Observacao" class="control-label"></label>
            <textarea asp-for="Observacao" class="form-control"></textarea>
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>
    @*CheckBox(Iss Retido Na Fonte/Consumidor Final/Produtor Rural/Serasa)*@
    <div class="form-group">
        <div class="form-row">
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IssRetidoNaFonte" /> @Html.DisplayNameFor(model => model.IssRetidoNaFonte)
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ConsumidorFinal" /> @Html.DisplayNameFor(model => model.ConsumidorFinal)
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProdutorRural" /> @Html.DisplayNameFor(model => model.ProdutorRural)
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Serasa" /> @Html.DisplayNameFor(model => model.Serasa)
                </label>
            </div>
        </div>
    </div>
    @*Botão Salvar e Cancelar*@
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}